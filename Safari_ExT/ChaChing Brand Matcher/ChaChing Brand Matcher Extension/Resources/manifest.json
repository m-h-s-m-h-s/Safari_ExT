{
  "manifest_version": 3,
  "name": "ChaChing Browser Extension",
  "version": "2.1.1",
  "description": "Find the best Cash Back deals from ChaChing so you don't lose out no matter where you shop online.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": [ "main.js" ]
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Find cashback deals on Chaching"
  },
  "icons": {
    "16": "ChaChing_Logo.png",
    "48": "ChaChing_Logo.png",
    "128": "ChaChing_Logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ChaChing_Logo.png",
        "BrandList.csv",
        "content_styles.css",
        "utils.js",
        "brands.js",
        "brand-detector.js",
        "pdp-detector.js",
        "content_main.js",
        "runner.js",
        "popup.js",
        "styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 